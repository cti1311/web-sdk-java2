  <modelVersion>4.0.0</modelVersion>

  <groupId>in.payu.websdk1</groupId>
  <artifactId>payu-websdk1</artifactId>
  <version>2.0.0</version>
  <packaging>jar</packaging>
  

  <name>web-sdk-java1</name>
  <description>Official java SDK for the Payu India</description>
  <url>https://github.com/cti1311/web-sdk-java2</url>

  <developers>
